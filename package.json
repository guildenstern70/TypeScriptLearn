        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.18.3",
        "prettier": "^1.19.1",
        "jest": "^25.1.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^25.2.0",
        "ts-node": "^8.6.2",
        "typescript": "^3.7.5"
    },
    "engines": {
        "node": ">=12"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
