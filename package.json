        "lint": "eslint --fix 'src/**/*.ts'",
        "build": "tsc",
        "start": "node ./lib/index.js",
        "test": "jest --verbose"
    },
    "dependencies": {
    },
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.14",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
